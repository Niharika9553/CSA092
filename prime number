#include<stdio.h>
 int main()
 {
     int num,i,count=0;
     printf("enter a number=");
     scanf("%d",&num);
     for(i=2;i<=num/2;i++)
     {
         if(num%i==0)
         {
           count=count+1;
         }
     }   
         if(count==0)
         {
           printf("%d is prime number",num);
         }
         else
         {
           printf("%d is not prime number",num);
         }
         return 0;
 }
OUTPUT;
enter a num=2
2 is a prime number

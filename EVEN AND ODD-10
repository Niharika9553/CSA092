#include<stdio.h>
int main()
{
    int num;
    printf("enter a number=");
    scanf("%d",&num);
    if(num % 2==0)
    {
        printf("Number %d is even",num);
    }
    else
    {
        printf("Number %d is odd",num);
    }
    return 0;
}
OUTPUT;
enter a number=5
Number 5 is odd

=== Code Execution Successful ===
